{
  "name": "kpi-automation-platform",
  "version": "1.0.0",
  "private": true,
  "description": "KPI 자동화 트래킹 시스템 - 매출 3,000만원 달성을 위한 전체 퍼널 KPI 자동 트래킹",
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/**\" --filter \"./kpi-tracker\" dev",
    "build": "pnpm --filter \"./packages/**\" build && pnpm --filter \"./apps/**\" build && pnpm --filter \"./services/**\" build",
    "start": "pnpm --parallel --filter \"./apps/**\" start",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "db:generate": "pnpm --filter \"@kpi/database\" db:generate",
    "db:push": "pnpm --filter \"@kpi/database\" db:push",
    "db:migrate": "pnpm --filter \"@kpi/database\" db:migrate",
    "db:studio": "pnpm --filter \"@kpi/database\" db:studio"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2"
  },
  "dependencies": {
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@prisma/client": "^6.2.0",
    "prisma": "^6.2.0",
    "tailwindcss": "^3.4.17",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    "typescript": "^5.7.2",
    "zod": "^3.24.1",
    "@tanstack/react-query": "^5.62.11",
    "zustand": "^5.0.2",
    "react-hook-form": "^7.54.2",
    "@hookform/resolvers": "^3.9.1",
    "next-auth": "^5.0.0-beta.25",
    "bcryptjs": "^2.4.3",
    "date-fns": "^4.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    "lucide-react": "^0.469.0"
  }
}
